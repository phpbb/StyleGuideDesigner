<li class="c-list-item">
	<div class="c-list-type">
		<svg class="o-icon c-list-type-icon{% if topic.status === 1 %} c-list-type-icon-read{% endif %}"><use xlink:href="#{{topic.icon}}"></use></svg>
	</div>
	<div class="c-list-primary">
		<div class="c-list-heading">
			<h3 class="c-list-title">
				<a class="c-list-link" href="#">{{topic.name}}</a>
				{% if topic.pages %}
					<ul class="paging">
						{% for page in topic.pages %}
							{% if loop.last %}
								<li class="paging-item"><a class="paging-link" href="page={{ page }}" data-tooltip="Last Page" title="Go to Last page"><svg class="o-icon paging-link-icon"><use xlink:href="#last-page"></use></svg></a></li>
							{% else %}
								<li class="paging-item"><a class="paging-link" href="?page={{ page }}" data-tooltip="Page {{ page }}" title="Go to page {{ page }}">{{ page }}</a></li>
							{% endif %}
						{% endfor %}
					</ul>
				{% endif %}
			</h3>
			<div class="c-list-action">
				<div class="c-list-action-body">
					<ul class="c-list-action-list">
						<li class="c-list-action-item c-list-action-time">
							<a class="c-list-action-link" href="#">
								<time datetime="{{ topic.last_time }}" title="{{ topic.last_time }}" data-short="{{ topic.last_time }}">{{ topic.last_time|moment("YYYYMMDD", true) }}</time>
							</a>
						</li>
						<li class="c-list-action-item c-list-action-user">
							<a href="./memberlist.php?mode=viewprofile&amp;u=61815" style="color: #{{ topic.last_color }};" class="c-list-action-link">{{ topic.last_author }}</a>
						</li>
					</ul>
				</div>
				<a href="./memberlist.php?mode=viewprofile&amp;u=61815"><img src="{{ topic.last_avatar }}" width="44" height="44" class="user-avatar c-list-action-img" alt="User Gravatar" data-dropdown="#user-dropdown"></a>
			</div>
		</div>
		<p class="c-list-subheader">
			<span class="c-list-data c-list-data-user">
				<svg class="o-icon c-list-data-icon"><use xlink:href="#user"></use></svg><a href="./memberlist.php?mode=viewprofile&amp;u=61815" style="color: #{{ topic.author_color }};" class="c-list-data-link">{{ topic.author }}</a>
			</span>
			<span class="c-list-data c-list-data-time">
				<svg class="o-icon c-list-data-icon"><use xlink:href="#time"></use></svg>
				<time datetime="{{ topic.time }}" title="{{ topic.time }}" data-short="{{ topic.time }}">{{ topic.time|moment("YYYYMMDD", true) }}</time>
			</span>
			<span class="c-list-data c-list-data-views">
				<svg class="o-icon c-list-data-icon"><use xlink:href="#views"></use></svg>{{ topic.views }}
			</span>
			<span class="c-list-data c-list-data-replies">
				<svg class="o-icon c-list-data-icon"><use xlink:href="#replies"></use></svg>{{ topic.replies }}
			</span>
		</p>
	</div>
</li>
